    <script>
      const Names = [];
      function addmethod() {
        let a = document.getElementById("adding").value;
        console.log(a);
        Names.push(a);
        document.getElementById("thuva").innerHTML = Names;
      }
    </script>
    <script>
      const Numbers = [1, 6, 5, 3, 8, 9];
      Numbers.sort();
      Numbers.reverse();
      document.getElementById("reverse").innerHTML = Numbers;
    </script>
